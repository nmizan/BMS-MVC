@model IEnumerable<BMSPhase2Demo.Models.DOCUMENTATTACHMENT>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/CommonCss/StyleSheet1.css" rel="stylesheet" />

@{
    ViewBag.Title = "Applicant Details";
}



<div class="well">
    <h4>Bonder Name:</h4>
    @ViewBag.BonderName

    <h4>Bonder License No:</h4>
    @ViewBag.BonderLicenseNo

</div>

<hr />

<h3>List Of Documents</h3>


<fieldset>
    <div class="well">
        <legend>ApplicantsDetails</legend>

        <table class="table">
            <tr>

                <th colspan="6"> @Html.ActionLink("Add New", "AddNewDocument", new { id = ViewBag.BonderSlno, id2 = ViewBag.BonderStatus }, new { @class = "btnAddNew" })</th>
            </tr>
            <tr>
                <th>Document Name</th>
                <th>RG Number</th>
                <th>Issue date</th>
                <th>Expire Date</th>
                <th>
                    Download File
                </th>
                <th>
                    Action
                </th>
            </tr>


            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.DOCHEADINGNAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RGATTCHNAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISSUEDATE)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.EXPDATE)
                    </td>




                    <td>
                        @if (!string.IsNullOrEmpty(item.ATTACHFILENM))
                        {
                            @Html.ActionLink("Download", "DownloadFile", new { id = item.ATTCHSLNO, })
                        }
                    </td>

                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = item.ATTCHSLNO }) |


                        @Html.ActionLink("Delete", "DeleteSingleDoc", new { id = item.ATTCHSLNO }, new { onclick = "return confirm('Are you sure you want to delete this ?');" })
                    </td>
                </tr>

            }


        </table>

</fieldset>

@using (Html.BeginForm("", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
