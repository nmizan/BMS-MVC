@model BMSPhase2Demo.Models.DOCUMENTATTACHMENT

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "BondRenewal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>DOCUMENTATTACHMENT</legend>

        @Html.HiddenFor(model => model.ATTCHSLNO)

        @Html.HiddenFor(model => model.BONDERSLNO)

        @Html.HiddenFor(model => model.BSNO)



        <div class="editor-label">
            @Html.LabelFor(model => model.DOCHEADINGNAME, "Document Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DOCHEADINGNAME, new { required = "required" })
            @Html.ValidationMessageFor(model => model.DOCHEADINGNAME)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RGATTCHNAME, "RG Number")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RGATTCHNAME, new { required = "required" })
            @Html.ValidationMessageFor(model => model.RGATTCHNAME)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.ISSUEDATE, "Issue Date")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ISSUEDATE, new { required = "required", @class = "datefield" })
            @* <input type="text" class="datefield" value="@Model.ISSUEDATE">*@
            @Html.ValidationMessageFor(model => model.ISSUEDATE)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EXPDATE, "Expire Date")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EXPDATE, new { required = "required", @class = "datefield" })
            @* <input type="text" class="datefield" value="@Model.EXPDATE">*@
            @Html.ValidationMessageFor(model => model.EXPDATE)
        </div>
        @if (!string.IsNullOrEmpty(Model.ATTACHFILENM))
        {
            <div>

                @Html.LabelFor(model => model.EXPDATE, " Download Current File")

            </div>

            <div>
                @Html.ActionLink("Download", "DownloadFile", new { id = Model.ATTCHSLNO })

            </div>
        }
        <div>
            <br />
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ATTACHFILENM, "Upload New File")
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.ATTACHFILENM)
        </div>

        <div>

            <input type="file" name="file" />

        </div>




        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ApplicantDetails", new { id = Model.BONDERSLNO })
</div>




@section Scripts{
    <script type="text/javascript">

        $(function () {
            $.datepicker.setDefaults($.datepicker.regional['bn-BD']);
            $(".datefield").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true
            }, $.datepicker.regional['bn-BD']);
        });
    </script>
}
