@model IEnumerable<BMSPhase2Demo.Models.MEASUREMENTUNIT>

@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding-left: 15px;
        padding-right: 15px;
        padding-top: 10px;
        padding-bottom: 10px;
        margin-left : 350px;
    }
</style>


<p style =" font-size :20px; margin-left : 350px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr><th colspan="6" style="text-align: center;">Measurement Unit Summary View </th></tr>
    <tr>
        <th>
            Unit SL No
        </th>
        <th>
            Unit Name
        </th>
       @* <th>
            Unit Name BG
        </th>*@
       <th colspan="3"  style="text-align :center " >
            
            Action
     </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MUSLNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MUNAME)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.MUNAMEBG)
            </td>*@

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MUSLNO })

            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.MUSLNO })

            </td>
            <td>

                @Html.ActionLink("Delete", "Delete", new { id = item.MUSLNO })
            </td>
        </tr>
    }

</table>
