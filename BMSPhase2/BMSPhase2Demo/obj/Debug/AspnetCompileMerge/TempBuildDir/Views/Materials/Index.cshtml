@model IEnumerable<BMSPhase2Demo.Models.MATERIAL>

@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    table, th, td {
        border: 1px solid black ;
        border-collapse: collapse;
        padding-left : 10px ;
        padding-right : 10px;
        padding-top  : 10px ;
        padding-bottom  : 10px;
    }
    
 
</style>


<p style =" font-size :20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    
        <tr><th colspan="13" style="text-align: center;">Materials Summary View </th></tr>
    <tr>
        <th>
         Material SL No
        </th>
        <th>
         Material Group Code
        </th>
        <th>
           MHS Code
        </th>
       
        @* <th>
            MHS Code BG
        </th>*@
       <th>
          Material Name
        </th>
        <th>
          MType
        </th>
        <th>
         Material Description
        </th>
        @*<th>
         Material Description BG
        </th>*@
        <th>
          Unit Name
        </th>
        <th>
          Remarks
        </th>
        <th colspan="3"  style="text-align :center " >
            
            Action
     </th>
    </tr>
   

<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MSLNO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MATERIALSGROUP.MGROUPCODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MHSCODE)
        </td>
       @* <td>
            @Html.DisplayFor(modelItem => item.MHSCODEBG)
        </td>*@
         
        <td>
            @Html.DisplayFor(modelItem => item.MATERIALNAME )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MTYPE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MDESCRIPTION )
        </td>
       @* <td>
            @Html.DisplayFor(modelItem => item.MDESCRIPTIONBG)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.MEASUREMENTUNIT.MUNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.REMARKS)
        </td>
       <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MSLNO }) 
           
        </td>
         <td>
           
            @Html.ActionLink("Details", "Details", new { id = item.MSLNO }) 
           
        </td>
        <td>
           
            @Html.ActionLink("Delete", "Delete", new { id = item.MSLNO })
        </td>
    </tr>
}
 </tbody>
</table>

