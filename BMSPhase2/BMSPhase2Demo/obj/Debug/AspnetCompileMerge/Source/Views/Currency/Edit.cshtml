        <div class="editor-label">
            Currency Code
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CURRENCYCODE)
            @Html.ValidationMessageFor(model => model.CURRENCYCODE)
        </div>

        <div class="editor-label">
            Currency Short Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CURRENCYSNM)
            @Html.ValidationMessageFor(model => model.CURRENCYSNM)
        </div>

        <div class="editor-label">
            Currency Short Name BG
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CURRENCYSNMBG)
            @Html.ValidationMessageFor(model => model.CURRENCYSNMBG)
        </div>

        <div class="editor-label">
          Currency  Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CURRENCYNAME)
            @Html.ValidationMessageFor(model => model.CURRENCYNAME)
        </div>

        <div class="editor-label">
             Currency  Name BG
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CURRENCYNAMEBG)
            @Html.ValidationMessageFor(model => model.CURRENCYNAMEBG)
        </div>

        <div class="editor-label">
             Input By
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.INPUTBY)
            @Html.ValidationMessageFor(model => model.INPUTBY)
        </div>

        <div class="editor-label">
           Input Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.INPUTDATE)
            @Html.ValidationMessageFor(model => model.INPUTDATE)
        </div>

        <div class="editor-label">
           Modified By
        </div>
