@model BMSPhase2Demo.Models.CURRENCY

@{
    ViewBag.Title = "Edit";
}
<style type="text/css">
    .editor-label,.editor-field {
      
        margin-left : 230px;
    }

</style>
<p style =" margin-left :400px;font-size :25px; ">Currency Information</p>
<h2 style ="margin-left :230px;">Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>CURRENCY</legend>

        <div class="editor-label">
            Currency SL No
        </div>
        <div class="editor-field">
          @*  @Html.EditorFor(model => model.CURRSLNO)
            @Html.ValidationMessageFor(model => model.CURRSLNO)*@
            @Html.TextBoxFor(model => model.CURRSLNO , new { @readonly="readonly" })
