@model BMSPhase2Demo.Models.MEASUREMENTUNIT

@{
    ViewBag.Title = "Details";
}
<style type="text/css">
    table, th, td {
        border: 0px;
        border-collapse: collapse;
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        font-size: 15px;
        margin-left : 350px;
    }

    .textBOxSize {
        width: 220px;
    }
</style>
<p style =" margin-left :400px;font-size :25px; ">Measurement Unit Information</p>
<h2 style ="margin-left :350px;">Details</h2>

<fieldset>
    <legend>MEASUREMENTUNIT</legend>

   

    <table>

        <tr>
            <td>
                Measurement Unit SL No:
                @Html.HiddenFor(model => model.MUSLNO)
            </td>
            <td>
                @Html.TextBoxFor(model => model.MUSLNO, new { @readonly = "readonly" })
            </td>
        </tr>

        <tr>
            <td>Measurement Unit Name:</td>
            <td>@Html.TextBoxFor(model => model.MUNAME, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Measurement Unit Name BG :</td>
            <td>@Html.TextBoxFor(model => model.MUNAMEBG, new { @readonly = "readonly" })</td>
        </tr>


        <tr>
            <td>Input By:</td>
            <td>@Html.TextBoxFor(model => model.INPUTBY, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Input date:</td>
            <td>@Html.TextBoxFor(model => model.INPUTDATE, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Modify By:</td>
            <td>@Html.TextBoxFor(model => model.MODIFIEDBY, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Modified Date:</td>
            <td>@Html.TextBoxFor(model => model.MODIFYDATE, new { @readonly = "readonly" })</td>
        </tr>
    </table>
</fieldset>
<p style ="margin-left :350px;">
    @Html.ActionLink("Edit", "Edit", new { id = Model.MUSLNO }) |
    @Html.ActionLink("Back to List", "Index")
</p>
