@model BMSPhase2Demo.Models.DESIGNATION

@{
    ViewBag.Title = "Details";
}
<style type="text/css">
    table, th, td {
        border: 0px;
        border-collapse: collapse;
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        font-size: 15px;
        margin-left :250px;
    }

    .textBOxSize {
        width: 220px;
    }
</style>
<p style =" margin-left :400px;font-size :25px; ">Designation Information</p>
<h2 style ="margin-left :250px;">Details</h2>

<fieldset>
    <legend>DESIGNATION</legend>

  

    <table>

        <tr>
            <td>
                Designation SL No:
                @Html.HiddenFor(model => model.DESSLNO)
            </td>
            <td>
                @Html.TextBoxFor(model => model.DESSLNO, new { @readonly = "readonly" })
            </td>
        </tr>
        <tr>
            <td>
                Designation Code:
            </td>
            <td> @Html.TextBoxFor(model => model.DESCODE, new { @readonly = "readonly" })</td>
        </tr>

        <tr>
            <td>
                Designation Code BG:
            </td>
            <td>
                @Html.TextBoxFor(model => model.DESCODEBG, new { @readonly = "readonly" })
            </td>
        </tr>
        <tr>
            <td>Designation Name:</td>
            <td>@Html.TextBoxFor(model => model.DESNAME, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Designation Name BG :</td>
            <td>@Html.TextBoxFor(model => model.DESNAMEBG, new { @readonly = "readonly" })</td>
        </tr>


        <tr>
            <td>Input By:</td>
            <td>@Html.TextBoxFor(model => model.INPUTBY, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Input date:</td>
            <td>@Html.TextBoxFor(model => model.INPUTDATE, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Modify By:</td>
            <td>@Html.TextBoxFor(model => model.MODIFIEDBY, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>Modified Date:</td>
            <td>@Html.TextBoxFor(model => model.MODIFYDATE, new { @readonly = "readonly" })</td>
        </tr>
    </table>
</fieldset>
<p style ="margin-left :250px;">
    @Html.ActionLink("Edit", "Edit", new { id = Model.DESSLNO }) |
    @Html.ActionLink("Back to List", "Index")
</p>
