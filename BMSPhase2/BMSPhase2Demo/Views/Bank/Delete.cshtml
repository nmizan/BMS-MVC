@model BMSPhase2Demo.Models.BANK


@{
    ViewBag.Title = "Delete";
}
<style type="text/css">
    table, th, td {
        border: 0px;
        border-collapse: collapse;
        padding-left : 10px ;
        padding-right : 10px;
        padding-top  : 10px ;
        padding-bottom  : 10px;
        font-size : 15px;
        margin-left : 240px;
    }
    .textBOxSize {
        width: 220px;
    }
 
</style>
<p style =" margin-left :400px;font-size :25px; ">Bank Information</p>
<h2 style ="margin-left :240px;">Delete</h2>

<h3 style ="margin-left :240px;">Are you sure you want to delete this?</h3>
<fieldset>
    <legend>BANK</legend>
               
                <table>
       
                    <tr>
                        <td>
                            Bank Name:
                            @Html.HiddenFor(model => model.BANKSLNO)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.BANKNAME)
                            @Html.ValidationMessageFor(model => model.BANKNAME)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Bank Name Bangla:
                        </td>
                        <td>
                            @Html.EditorFor(model => model.BANKNAMEBG)
                            @Html.ValidationMessageFor(model => model.BANKNAMEBG)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Swift:
                        </td>
                        <td>
                            @Html.EditorFor(model => model.SWIFT)
                            @Html.ValidationMessageFor(model => model.SWIFT)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email:
                        </td>
                        <td>
                            @Html.EditorFor(model => model.WEB)
                            @Html.ValidationMessageFor(model => model.WEB)
                        </td>
                    </tr>
                    
    </table>
      
   </fieldset>

@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <p style ="margin-left :240px;">
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}



